{
	"name": "Open local folder by explorer",
	"description": "Chromeからローカルフォルダーをエクスプローラーで開く",
	"version": "0.2.0",
	"manifest_version": 2,
	"default_locale": "en",
	"icons": {
		"48": "/icons/icon48.png",
		"128": "/icons/icon128.png"
	},
	"options_page": "setup/index.html",
	"minimum_chrome_version": "73",
	"permissions": [
		"storage",
		"notifications",
		"contextMenus",
		"nativeMessaging"
	],
	"background": {
		"page": "background.html",
		"persistent": false
	}
}
